<div class="container">
	<%= simple_form_for(@imagene) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :texto %>
	    <%= f.input :description %>
	    <%= f.file_field :image %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>
</div>

